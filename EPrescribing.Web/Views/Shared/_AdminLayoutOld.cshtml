@using EPrescribing.Web.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.Title | ODC Soft</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon
        ============================================ -->
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.ico">
    @Styles.Render("~/Content/themecss")
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/css/subscriptionmodel.css" rel="stylesheet" />
    <link href="~/css/table-responsive.css" rel="stylesheet" />
    <link href="~/css/customstyle.css" rel="stylesheet" />
    <link href="~/css/customStyle-responsive.css" rel="stylesheet" />

    <style>
             html,
             body {
                 height: 100%;
                 margin: 0;
                 padding: 0;
             }

             #main-wrapper {
                 padding: 0 0 12%;
                 position: relative;
                 min-height: 100vh
             }

             div.footer-copyright-area {
                 bottom: 0;
                 left: 0;
                 position: absolute;
                 width: 100%
             }

             .ui-autocomplete {
                 max-height: 100px;
                 overflow-y: auto;
                 /* prevent horizontal scrollbar */
                 overflow-x: hidden;
             }
             /* IE 6 doesn't support max-height
        * we use height instead, but this forces the menu to always be this tall
        */
             * html .ui-autocomplete {
                 height: 100px;
             }
    </style>

</head>


<body>
    <div id="main-wrapper">
        <!--[if lt IE 8]>
            <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <!-- Start Header Top Area -->
        @Html.Partial("_logoBar")
        <!-- End Header Top Area -->
        <!-- Start Menu Area -->
        @Html.Partial("_mainMenu")
        <!-- End Menu Area -->
        <!--Start Main Body-->
        <div id="BodyContainer">
            @RenderBody()
        </div>

        <!--End Main Body-->
        <!-- Start Footer area-->
        @Html.Partial("_footer")
    </div>


    @Scripts.Render("~/bundles/themejquery")
    @Scripts.Render("~/bundles/themebootstrap")
    @Scripts.Render("~/bundles/themejs")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/jquery-confirm/jquery-confirm.min.js"></script>
    <script src="~/js/custom.js"></script>
    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            $.validator.addMethod('date', function (value, element) {
                if (this.optional(element)) {
                    return true;
                }
                var valid = true;
                try {
                    $.datepicker.parseDate('dd/mm/yy', value);
                }
                catch (err) {
                    valid = false;
                }
                return valid;
            });


        });



    $(document).ready(function () {
            $('body').on('focus', ".datepicker", function () {
                $(this).datepicker({
                    dateFormat: "dd/mm/yy"
                    , changeMonth: true,
                    changeYear: true,
                    yearRange: "-100:+100"
                });
            });



            //$("input[data-val-date]").removeAttr("data-val-date");
            $(".datepicker").not(".noplaceholder").attr("placeholder", "dd/mm/yyyy");


            $(".delBtn").click(function (e) {
                var url = $(this).attr('deleteUrl');
                var appUrl = '@System.Configuration.ConfigurationManager.AppSettings["baseurl"]';
                $.confirm({
                    title: 'Are you sure to delete this item?',
                    content: 'This action can\'t revert!',
                    animation: 'scale',
                    icon: 'fa fa-warning',
                    type: 'red',
                    closeIcon: true,
                    boxWidth: '30%',
                    useBootstrap: false,
                    buttons: {
                        Yes: {
                            btnClass: 'btn-danger',
                            action: function () {
                                window.location.href = appUrl + url;
                            }
                        },
                        No: function () {

                        }
                    }
                });


            })
        })

        $(function () {

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-center",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "200",
                "hideDuration": "200",
                "timeOut": "5000",
                "extendedTimeOut": "200",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }

            //notification with toastr
            var saveMsg = '@TempData["save"]';
            var updateMsg = '@TempData["update"]';
            var deleteMsg = '@TempData["delete"]';
            var customMsg = '@TempData["custom"]';
            var warningMsg = '@TempData["warning"]';
            var successMsg = '@TempData["success"]';
            if (saveMsg != '') {
                Command: toastr["success"]("Data saved successfully!")
            }
            if (updateMsg != '') {
                Command: toastr["success"]("Data updated successfully!")
            }
            if (deleteMsg != '') {
                Command: toastr["error"]("Data deleted successfully!")
            }
            if (customMsg != '') {
                Command: toastr["warning"](customMsg)
            }
            if (warningMsg != '') {
                Command: toastr["error"](warningMsg)
            }
            if (successMsg != '') {
                Command: toastr["success"](successMsg)
            }


            //Command: toastr["success"]("Are you the six fingered man?")


        });

    </script>




</body>
</html>
