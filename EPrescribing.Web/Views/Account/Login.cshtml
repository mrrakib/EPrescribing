@using EPrescribing.Web.ViewModels
@model VMLoginUser
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";

}


@*@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "nk-block toggled", role = "form", @id = "l-login" }))*@
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "nk-block animated fadeIn", role = "form", @id = "l-login" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="nk-navigation nk-lg-ic odc-login">
        <a class="odc-alternate-login email-login" href="@Url.Action("EmailLogin",new { ReturnUrl = ViewBag.ReturnUrl })">
            <i class="notika-icon notika-mail"></i> <span>Login By Email</span>
        </a>
        @*<a href="#" data-ma-action="nk-login-switch" data-ma-block="#l-forget-password"><i>?</i> <span>Forgot Password</span></a>*@
    </div>

    <div class="nk-form">
        <div class="input-group text-left">
            <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-phone"></i></span>
            <div class="nk-int-st">
                @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control", @placeholder = "Enter your mobile no" })

            </div>
            @Html.ValidationMessageFor(m => m.MobileNo, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-login btn-success btn-float"><i class="notika-icon notika-right-arrow right-arrow-ant"></i></button>
    </div>

    <div class="nk-navigation nk-lg-ic odc-login">
        <button class="odc-alternate-login" type="submit">
            <i class="notika-icon notika-success"></i> <span>Login</span>
        </button>
        @*<a href="#" data-ma-action="nk-login-switch" data-ma-block="#l-forget-password"><i>?</i> <span>Forgot Password</span></a>*@
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}