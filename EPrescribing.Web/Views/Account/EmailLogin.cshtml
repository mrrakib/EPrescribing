@using EPrescribing.Web.ViewModels
@model VMEmailLogin
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginRegisterLayout.cshtml";

}



@using (Html.BeginForm("EmailLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "nk-block animated fadeIn", role = "form", @id = "l-login" }))
{
   

    <div class="nk-navigation nk-lg-ic odc-login">
        <a class="odc-alternate-login phone-login" href="@Url.Action("Login",new { ReturnUrl = ViewBag.ReturnUrl })">
            <i class="notika-icon notika-phone"></i> <span>Login By Number</span>
        </a>
    </div>

    <div class="nk-form">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="input-group text-left">
            <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-mail"></i></span>
            <div class="nk-int-st">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email" })

            </div>
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="input-group text-left">
            <span class="input-group-addon nk-ic-st-pro"><i class="notika-icon notika-draft"></i></span>
            <div class="nk-int-st">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your password" })

            </div>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-login btn-success btn-float"><i class="notika-icon notika-right-arrow right-arrow-ant"></i></button>
    </div>

    <div class="nk-navigation nk-lg-ic odc-login">
        <button class="odc-alternate-login" type="submit">
            <i class="notika-icon notika-success"></i> <span>Login</span>
        </button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}