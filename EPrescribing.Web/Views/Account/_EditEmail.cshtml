@model EPrescribing.Web.ViewModels.VMChangeEmail
@{
    Layout = null;
}
@using (Html.BeginForm("EditEmail", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @onSubmit = "return SubmitEmailInfo(this)", @class = "form-horizontal", role = "form" }))
{
    <div class="wizard-hd">
        <div class="breadcomb-wp">
            <div class="breadcomb-icon">
                <i class="notika-icon notika-social"></i>
            </div>
            <div class="breadcomb-ctn">
                <h2>Change Email</h2>
                <p class="text-tagline">Please fill up carefully.</p>
            </div>
          
        </div>

    </div>
    @Html.HiddenFor(model => model.DoctorId, new { @id = "doctorId" });
    <div class="row">
        <div class="col-md-6 col-lg-offset-2">
            <h4 style="color:red;">@Model.Message</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="col-md-4 text-right">
                <label style="margin-top:10px;">Current Email</label>
            </div>
            <div class="col-md-8">

                <div class="nk-int-st">
                    @Html.TextBoxFor(m => m.CurrentEmail, new { @readonly = "readonly", @id = "txtCurrentEmail", @class = "form-control", @placeholder = "Current Email" })
                    @Html.ValidationMessageFor(m => m.CurrentEmail, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="col-md-4 text-right">
                <label style="margin-top:10px;">New Email</label>
            </div>
            <div class="col-md-8">

                <div class="nk-int-st">
                    @Html.TextBoxFor(m => m.Email, new { @id = "txtEmail", @class = "form-control", @placeholder = "New Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>


        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="col-md-4 text-right">
                <label style="margin-top:10px;">Confirm Email</label>
            </div>
            <div class="col-md-8">

                <div class="nk-int-st">
                    @Html.TextBoxFor(m => m.ConfirmEmail, new { @id = "txtConfirmEmail", @class = "form-control", @placeholder = "Confirm Email" })
                    @Html.ValidationMessageFor(m => m.ConfirmEmail, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3 material-design-btn text-center my-2">
            <button type="submit" class="btn notika-btn-cyan waves-effect">
                <i class="notika-icon notika-checked"></i> Save
            </button>
        </div>
    </div>
}