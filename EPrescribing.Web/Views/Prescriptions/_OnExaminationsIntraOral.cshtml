@using HtmlHelpers.BeginCollectionItem;
@model EPrescribing.Web.Models.OnExamination

@{
    Layout = null;
}
<tr class="odc-exam-row">
    @using (Html.BeginCollectionItem("OnExaminations"))
    {
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.PrescriptionId)
        <td class="odc-sl">
            <span class="countRow">@(@Model.No + 1)</span>
        </td>
        <td>
            <div class="nk-int-st">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control txtPathologyName", @placeholder = "Pathology Name", @rows = "3" })
                @Html.HiddenFor(model => model.Status)
            </div>
        </td>
        <td>
            <ul class="prbPosition odc-examination">
                <li class="upLeft">@Html.TextBoxFor(m => m.UpperLeft)</li>
                <li class="upRight">@Html.TextBoxFor(m => m.UpperRight)</li>
                <li class="bottomLeft">@Html.TextBoxFor(m => m.BottomLeft)</li>
                <li class="bottomRight">@Html.TextBoxFor(m => m.BottomRight)</li>
            </ul>
        </td>
        <td>
            <input class="hfLast" type="hidden" value="@Model.No" />
            <button title="Remove" id="removeOnExaminationsIntraOral" class="btn btn-danger danger-icon-notika waves-effect">
                <i class="notika-icon notika-trash"></i>
            </button>
        </td>
    }
</tr>